<div class="row mb-3 justify-center items-center min-h-screen" id="review-form">
    <div class="col-lg-8 offset-lg-2">
        <%= form_with model: review, url: spot_reviews_path(spot) do |f| %>
            <%= f.label :'口コミ投稿', class: "text-sm" %>
            <%# テキストエリア %>
            <div class="mt-1">
                <div class="card shadow-xl">
                    <%= f.text_area :body, class: "textarea textarea-bordered h-48", placeholder: "200文字以内" %>
                </div>
            </div>
            <%# 送信ボタン %>
            <div class="flex flex-col justify-center items-center">
                <div class="mt-4">
                    <%= f.submit "送信", class: "btn btn-outline btn-primary" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
