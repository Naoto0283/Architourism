<div id="spot-id-<%= spot.id %>">
  <div class="card shadow-xl ">
    <div class="m-4">
      <%# Spot名 %>
      <div class="mt-4">
        <div class="font-bold text-md">
          <%= link_to spot.name, spot_path(spot), class: "link" %>
        </div>
      </div>

      <%# Spotカテゴリ名・レーティング %>
      <div class="mb-4">
        <%# カテゴリ名 %>
        <p class="text-white font-bold badge badge-primary mt-4">
          <%= spot.category.name %>
        </p>
        <%# レーティング %>
        <% if spot.rating.present? %>
          <p class="text-sm text-white font-bold badge badge-primary mt-4">
            ⭐️ <%= spot.rating %>
          </p>
        <% end %>
      </div>

      <%# Spot住所 %>
      <div class="mb-2">
        <div class="flex justify-between items-center"> <!-- justify-between を追加 -->
          <div class="text-sm">
            <%= spot.address %>
          </div>
          <div class="ml-auto">
            <%= render 'bookmark_buttons', { spot: spot } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>